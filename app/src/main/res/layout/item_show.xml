<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cvShows"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:layout_marginTop="@dimen/activity_vertical_margin"
    android:foreground="?android:attr/selectableItemBackground">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/ivShowImage"
            android:layout_width="@dimen/image_show_width"
            android:layout_height="@dimen/image_show_height"
            android:scaleType="centerCrop"
            app:srcCompat="@mipmap/ic_launcher"
            android:layout_marginLeft="@dimen/activity_small_margin"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"/>

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/ivShowImage"
            android:layout_toRightOf="@id/ivShowImage"
            android:layout_marginTop="@dimen/activity_small_margin"
            android:layout_marginLeft="@dimen/activity_small_margin"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@android:color/black"
            android:layout_centerVertical="true"
            android:layout_alignParentTop="true"
            android:maxLength="20"
            tools:text="F.R.I.E.N.D.S (1993)"/>


        <TextView
            android:id="@+id/tvUserScore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_small_margin"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@android:color/black"
            android:layout_centerVertical="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            tools:text="85%"/>

        <ImageView
            android:id="@+id/ivUserScore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_user_score"
            android:layout_toLeftOf="@id/tvUserScore"
            android:layout_centerVertical="true"
            android:layout_marginTop="@dimen/activity_small_margin"
            android:layout_alignParentTop="true"/>

        <TextView
            android:id="@+id/tvOverview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvTitle"
            android:text="FRIENDS Overview"
            android:maxLength="190"
            android:layout_toEndOf="@id/ivShowImage"
            android:layout_toRightOf="@id/ivShowImage"
            android:layout_marginLeft="@dimen/activity_small_margin"
            android:layout_marginTop="@dimen/activity_small_margin"/>
    </RelativeLayout>

</android.support.v7.widget.CardView>